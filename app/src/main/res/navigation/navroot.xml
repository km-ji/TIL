<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navroot"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/editFragment"
        android:name="com.hanyang.addresslist.ui.main.EditFragment"
        android:label="edit_fragment"
        tools:layout="@layout/edit_fragment">
        <action
            android:id="@+id/action_editFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.hanyang.addresslist.ui.main.InputFragment"
        android:label="input_fragment"
        tools:layout="@layout/input_fragment" />
    <fragment
        android:id="@+id/viewFragment"
        android:name="com.hanyang.addresslist.ui.main.ViewFragment"
        android:label="view_fragment"
        tools:layout="@layout/view_fragment" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.hanyang.addresslist.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_viewFragment2"
            app:destination="@id/viewFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_mainFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
</navigation>